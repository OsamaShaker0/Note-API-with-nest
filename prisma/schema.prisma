generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id                        String   @id @default(auto())@map("_id")@db.ObjectId
  name                      String   
  email                     String   @unique
  password                  String   
  verifyRegisterToken       String?
  isVerified                Boolean  @default(false)
  verifyOldEmailToken       String?
  verifyNewEmailToken       String?
  newEmail                  String?
  isEamilChangeVerified     Boolean  @default(false)
  verifyForgetPasswordToken String?
  Note                      Note[]
}
model Note {
  id                        String  @id @default(auto())@map("_id")@db.ObjectId
  title                     String  
  body                      String
  userId                    String    @db.ObjectId
  user                      User      @relation(fields: [userId], references: [id])          
}